{
  "name": "storefront-api",
  "version": "1.0.0",
  "description": "Storefront API (TypeScript + Express + Postgres) - scaffold for rubric",
  "main": "dist/src/server.js",
  "scripts": {
    "start": "node dist/src/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "test": "set NODE_ENV=test && npx jasmine --config=tests/support/jasmine.json",
    "lint": "eslint 'src/**/*.ts' --ext .ts --max-warnings=0",
    "format": "prettier --check 'src/**/*.{ts,js,json,md}'",
    "db:migrate": "node ./scripts/run_migrations.js up",
    "db:rollback": "node ./scripts/run_migrations.js down"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "^4.3.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.1",
    "@types/pg": "^8.10.0",
    "jasmine": "^4.5.0",
    "supertest": "^6.3.4",
    "@types/supertest": "^2.0.12",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2",
    "eslint": "^8.36.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "prettier": "^2.8.8"
  }
}